# Server
PORT=3000
NODE_ENV=development

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Redis (for Bull queue)
REDIS_HOST=localhost
REDIS_PORT=6379

# Google Calendar OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/calendar/auth/google/callback

# Webhook endpoint (must be HTTPS in production, use ngrok for local dev)
GOOGLE_WEBHOOK_URL=https://your-domain.com/api/calendar/webhook

# Encryption key for storing OAuth tokens (generate with: openssl rand -hex 32)
OAUTH_ENCRYPTION_KEY=your_64_char_hex_string

# Calendar sync settings
CALENDAR_TEST_MODE=false
FRONTEND_URL=http://localhost:5173

# OpenAI API (for agents)
OPENAI_API_KEY=

# MCP Server
MCP_SERVER_URL=http://localhost:3001
